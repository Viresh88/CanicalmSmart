<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000004D" /> <!-- Shadow color with 30% opacity (#4D) -->
            <corners android:radius="8dp" /> <!-- Rounded corners for shadow layer -->
        </shape>
    </item>

    <!-- Gradient Layer with Border and Corners -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#72CF30"
            android:endColor="#64B72B"
            android:type="linear" />

            <!-- Rounded corners -->
            <corners android:radius="5dp" />

            <!-- Border Stroke -->
            <stroke
                android:width="1dp"
                android:color="#388E3C" />
        </shape>
    </item>

</layer-list>
