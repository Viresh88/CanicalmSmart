<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9"/> <!-- Yellow color when pressed -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9"/> <!-- Slightly darker yellow when focused -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color when not pressed -->
            <stroke android:width="1dp" android:color="#D9D9D9"/> <!-- Border color -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>
