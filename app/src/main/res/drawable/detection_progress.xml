<!-- res/drawable/detection_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#D6D6D6" /> <!-- Light gray background -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <solid android:color="#4285F4" /> <!-- Blue progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
