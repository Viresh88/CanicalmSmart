<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners with 8dp radius -->
    <corners android:radius="8dp" />

    <!-- Background color for the EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: Add a border/stroke around the EditText -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional: Add padding to the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="6dp"
        android:bottom="6dp" />

</shape>
