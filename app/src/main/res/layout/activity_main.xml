<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textFontWeight="400"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="57dp" />

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_language_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/en" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:lineHeight="18dp"
            android:textFontWeight="400"
            android:layout_marginEnd="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_language_dropdown"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:src="@drawable/dropdownicon"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Device"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textFontWeight="400"
        app:layout_constraintTop_toBottomOf="@+id/layout_language"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/layout_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_device_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ecllipse" />

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name 1"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:lineHeight="18dp"
            android:textFontWeight="400"
            android:layout_marginEnd="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_device_dropdown"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:src="@drawable/dropdownicon"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/btn_add_device"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/addicon"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:text="Submit"
        android:fontFamily="@font/poppins"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textFontWeight="600"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/layout_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
