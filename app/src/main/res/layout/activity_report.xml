<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFA726"
        android:padding="8dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Demo"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>
        <!--        android:drawableStart="@drawable/ic_launcher_background"/>-->

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canicalm Smart"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/settingIcon"
            android:layout_width="64dp"
            android:layout_height="31dp"
            android:src="@drawable/param" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCalender"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/calendar" />

        <TextView
            android:id="@+id/datetxtView"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:background="?attr/selectableItemBackground"
            android:text="TODAY"
            android:textColor="@color/orange"
            android:textSize="18sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/reportHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        
        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/gray">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/detected" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETECTIONS"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/gray">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/warned" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WARNED"
                android:textSize="10sp"
                android:textColor="@color/orange"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/gray">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/penalized" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CORRECTIONS"
                android:textSize="10sp"
                android:textColor="@color/corrected"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_below="@id/reportHead"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA726"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/out"  />

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="180dp"
                android:background="@color/gray"
                android:src="@drawable/check" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:src="@drawable/batt_40" />

        </LinearLayout>



        <!-- Paw icon -->
        <ImageView
            android:id="@+id/pawIcon"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"
            android:src="@drawable/dog_paw" />
    </LinearLayout>

</LinearLayout>
