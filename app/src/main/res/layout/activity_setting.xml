<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSelectDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtSetting"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/layout_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvSelectDevice">

        <ImageView
            android:id="@+id/img_device_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ecllipse" />

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name 1"
            android:textSize="16sp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/btn_add_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editicon"
            android:layout_marginLeft="180dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txtlang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/layout_device"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txtlang">

        <ImageView
            android:id="@+id/img_language_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/en" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="16sp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/img_language_dropdown"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dropdownicon"
            android:layout_marginLeft="230dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stimulation Level"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/layout_language"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_stimulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txtLevel">

        <TextView
            android:id="@+id/txtStimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beep Sound"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgStimulationDropdown"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dropdownicon"
            android:layout_marginLeft="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detection Level"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/layout_stimulation"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/seekbarBox"
        android:layout_width="378dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDetection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Low" />

            <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/seekthumb"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="High" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/seekbarBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SplitLine_hor1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/txtsetActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Active Time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select hourly active time"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txtsetActive"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iconActiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sideicon"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toRightOf="@id/txtdesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtsetActive"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutUsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/setTimeLayout">

          <TextView
              android:id="@+id/txtAboutUs"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="About Us"
              android:layout_marginStart="10dp"
              android:layout_marginTop="20dp"
              android:textSize="16sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/txtdesc2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:layout_marginStart="10dp"
             android:textSize="12sp"
             android:text="About our company contact us,\n Terms &amp; Conditions"
             app:layout_constraintTop_toBottomOf="@+id/txtAboutUs"
             app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iconaboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sideicon"
            app:layout_constraintLeft_toRightOf="@+id/txtAboutUs"
            app:layout_constraintTop_toBottomOf="@id/txtAboutUs"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



        <ImageView
            android:id="@+id/logoutgicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logouticon"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/aboutUsLayout"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Logout"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/logoutgicon"
            app:layout_constraintTop_toBottomOf="@id/aboutUsLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
