<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TimeSlotButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="CalendarDayHeader">
        <!-- Set the width and height of the TextView -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Set the text size of the header -->
        <item name="android:textSize">16sp</item>

        <!-- Align the text in the center of each TextView -->
        <item name="android:gravity">center</item>

        <!-- Define the color of the text -->
        <item name="android:textColor">@color/black</item>

        <!-- Set padding to create space around the text -->
        <item name="android:padding">11dp</item>

        <!-- Customize font family (optional) -->
        <item name="android:fontFamily">@font/poppins</item> <!-- Optional, if using custom fonts -->
    </style>
</resources>
