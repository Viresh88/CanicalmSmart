<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AssignmentShaaySoft" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#FF6640</item>
    </style>

    <style name="Theme.AssignmentShaaySoft" parent="Base.Theme.AssignmentShaaySoft" />

    <style name="CalendarDateStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- styles.xml -->
    <style name="MyCalendarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#2687E1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:calendarTextColor">#6E6E6E</item>
        <item name="android:weekNumberColor">@color/green</item>
        <item name="android:dateTextAppearance">@style/MyCalendarDateText</item>
    </style>

    <style name="MyCalendarDateText" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <style name="CustomTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item> <!-- Prevent text from being uppercase -->
        <item name="android:textStyle">bold</item> <!-- Make text bold -->
        <item name="android:fontFamily">@font/poppins</item> <!-- Apply custom font if needed -->
    </style>

</resources>